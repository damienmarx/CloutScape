# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
ADMIN_ID=your_discord_admin_id_here

# Flask Web App Configuration
FLASK_ENV=production
FLASK_PORT=5000
SECRET_KEY=change-this-to-a-random-secret-key

